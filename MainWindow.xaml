<Window x:Class="WpfDead.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDead"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" MinHeight="300" MinWidth="500">
    <Grid>
		<StackPanel>
			<Label Content="Логин" HorizontalAlignment="Center"/>
			<TextBox Margin="50 0 50 0" Text="{Binding User.Login}"/>
			<Label Content="Пароль" HorizontalAlignment="Center"/>
			<TextBox Margin="50 0 50 0" Text="{Binding User.Password}"/>
			<StackPanel Height="20"/>
			<Button Content="Войти" Margin="100 0 100 0" Click="Enter"/>
		</StackPanel>
    </Grid>
</Window>
